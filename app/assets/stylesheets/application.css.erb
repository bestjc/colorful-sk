/* inherit height from window */
html, body { 
  padding-top: 30px;
  background-color: #E7EAEC;
  height: 100%;
}

* {
  -webkit-box-sizing: border-box;
     -moz-box-sizing: border-box;
          box-sizing: border-box;
}


/* ---- grid ---- */

.grid {
  height: 75%;
}

/* clear fix */
.grid:after {
  content: '';
  display: block;
  clear: both;
}

/* ---- .grid-item ---- */

.grid-item {
  float: left;
  width: 250px;
  border: 2px solid #333;
 }

.grid-item img{
  width: 246px;
}

.caption {
  width: 246px;
}