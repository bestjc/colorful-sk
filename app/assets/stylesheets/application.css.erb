* {
  -webkit-box-sizing: border-box;
     -moz-box-sizing: border-box;
          box-sizing: border-box;
}

/* inherit height from window */
html, body {
  background: #E7EAEC;
}
html { overflow-y: scroll; }

.jumbotron {
  width: 100%;
  position: absolute;
  height: 100%;
  margin-bottom: 0;
  background-image: url(<%= asset_path 'bg.jpg' %>);
  color: white;
  padding-top: 150px;
}
.jumbotron h1{
  font-size: 48px;
}

.container {
  width: 1244px;
}

.panel_top {
  margin-top: 60px;
}

.user_show{
  margin-top: 10px;
}
/* ---- grid ---- */

.grid {
  max-width: 100%;
}

/* clear fix */
.grid:after {
  content: '';
  display: block;
  clear: both;
}

/* ---- .grid-item ---- */

.grid-item{
  width: 236px;
  float: left;
  border: 1px solid #white;
  border-color: hsla(0, 0%, 0%, 0.7);
}

.grid-item a img {
  display: block;
  max-width: 100%;
}


.thumbnail {
  margin-bottom: 0px;
}
.thunbnail a:visited,a:hover{
  background-color: transparent;
}