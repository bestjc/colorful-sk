/* inherit height from window */
html, body { 
  padding-top: 30px;
  background-color: #E7EAEC;
  height: 100%;
}
* {
  -webkit-box-sizing: border-box;
     -moz-box-sizing: border-box;
          box-sizing: border-box;
}

/* inherit height from window */
html, body { height: auto; }

body {
  font-family: sans-serif;
}


/* ---- grid ---- */

.grid {
  background: #DDD;
  width: 1496px;
  margin: 0 auto;
  border: 0;
}

/* clear fix */
.grid:after {
  content: '';
  display: block;
  clear: both;
}

/* ---- .grid-item ---- */

.grid-item,
.grid-sizer {
  width: 236px;
}

.grid-item {
  float: left;
  background: #DDD;
  border: 1px solid #white;
  border-color: hsla(0, 0%, 0%, 0.7);
}

.grid-item img { width: 236px; margin-left:3px; margin-top:2px; }