* {
  -webkit-box-sizing: border-box;
     -moz-box-sizing: border-box;
          box-sizing: border-box;
}
html { overflow-y: scroll; }

/* inherit height from window */
html, body { 
  padding-top: 30px;
  background-color: #E7EAEC;
}

body {
  font-family: sans-serif;
}

/* ---- grid ---- */

.grid {
  background: #DDD;
  max-width: 100%;
}

/* clear fix */
.grid:after {
  content: '';
  display: block;
  clear: both;
}

/* ---- .grid-item ---- */

.grid-item{
  width: 236px;
  float: left;
  border: 1px solid #white;
  border-color: hsla(0, 0%, 0%, 0.7);
}

.grid-item a img {
  display: block;
  max-width: 100%;
}


.thumbnail {
  margin-bottom: 0px;
}